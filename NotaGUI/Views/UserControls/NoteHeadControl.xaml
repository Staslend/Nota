<UserControl x:Class="NotaGUI.Views.UserControls.NoteHeadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotaGUI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid Background="White" >
        <Border BorderBrush="Black" BorderThickness="1">
            <Label Content="{Binding subject}"/>
        </Border>
        <Button Name="OpenButton" Opacity="0" Click="OpenButton_Click" Tag="{Binding id}"/>

    </Grid>
</UserControl>
